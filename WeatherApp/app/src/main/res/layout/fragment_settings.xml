<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsFragment">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tempCard"
            style="?attr/materialCardViewElevatedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="31dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/main_card_color"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tempScaleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat700"
                    android:gravity="center_horizontal|top"
                    android:letterSpacing="0.01"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:lineSpacingExtra="-41sp"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Temperature scale:" />

                <RadioGroup
                    android:id="@+id/tempRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/temp_radio_button_1"
                    app:layout_constraintTop_toBottomOf="@+id/tempScaleText"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="25dp">

                    <RadioButton
                        android:id="@+id/temp_radio_button_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat700"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="-41sp"
                        android:text="Celsius (°C)"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/temp_radio_button_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat700"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="-41sp"
                        android:text="Fahrenheit (°F)"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginBottom="25dp"/>
                </RadioGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/pressureCard"
            style="?attr/materialCardViewElevatedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="31dp"
            app:cardBackgroundColor="@color/main_card_color"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            app:layout_constraintTop_toBottomOf="@id/tempCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/pressureScale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat700"
                    android:gravity="center_horizontal|top"
                    android:letterSpacing="0.01"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:lineSpacingExtra="-41sp"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Pressure unit:" />

                <RadioGroup
                    android:id="@+id/pressureRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/pressure_radio_button_1"
                    app:layout_constraintTop_toBottomOf="@+id/pressureScale"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="25dp">

                    <RadioButton
                        android:id="@+id/pressure_radio_button_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat700"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="-41sp"
                        android:text="@string/millibars_mbs"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/pressure_radio_button_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat700"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="-41sp"
                        android:text="@string/inches_of_mercury_in"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginBottom="25dp"/>
                </RadioGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>